.col-md-6
  %h3= t('headers.your_forums')
  %ul#forums
    - forums.each do |f|
      %li= link_to f.name, f

.col-md-6
  %form{ action: search_forums_path, method: 'get' }      
    .form-group
      %h3= t('headers.search')

      .input-group
        = text_field_tag :term, nil, class: 'form-control'
        
        %span.input-group-btn
          %button.btn.btn-default{ title: t('titles.search') }
            %span.glyphicon.glyphicon-search
